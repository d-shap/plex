#!/bin/bash
docker run \
    --rm \
    --name plex \
    --device /dev/net/tun \
    --cap-add=NET_ADMIN \
    --security-opt="label=disable" \
    -d \
    -v /etc/localtime:/etc/localtime \
    -v /plex/config/cache:/plex/config/Cache \
    -v /plex/config/codecs:/plex/config/Codecs \
    -v /plex/config/crash-reports:/plex/config/Crash\ Reports \
    -v /plex/config/media:/plex/config/Media \
    -v /plex/config/metadata:/plex/config/Metadata \
    -v /plex/config/plug-in-support:/plex/config/Plug-in\ Support \
    -v /plex/config/plug-ins:/plex/config/Plug-ins \
    -v /plex/config/preferences.xml:/plex/config/Preferences.xml \
    -v /plex/media/ad_movies:/plex/media/ad_movies \
    -v /plex/media/ad_series:/plex/media/ad_series \
    -v /plex/media/ch_movies:/plex/media/ch_movies \
    -v /plex/media/ch_series:/plex/media/ch_series \
    -v /plex/media/ed_movies:/plex/media/ed_movies \
    -v /plex/media/ed_series:/plex/media/ed_series \
    -v /plex/upload:/plex/upload \
    -v /var/log/plex:/plex/logs \
    -v /var/backups/plex:/plex/backups \
    -p 1900:1900 \
    -p 3005:3005 \
    -p 5353:5353 \
    -p 8324:8324 \
    -p 32400:32400 \
    -p 32410:32410 \
    -p 32412:32412 \
    -p 32413:32413 \
    -p 32414:32414 \
    -p 32469:32469 \
        plex
