#!/bin/bash

PIDFILE=/var/run/plex.pid

backup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilBackup "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

restore() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilRestore "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

showPreferences() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilShowPreferences
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

showTree() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilShowTree
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

bash() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" sh -c "cd /plex && /bin/bash"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

case $1 in
    backup)
        backup $@
        ;;
    restore)
        restore $@
        ;;
    showPreferences)
        showPreferences
        ;;
    showTree)
        showTree
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 (backup | restore | showPreferences | showTree | bash)"
        ;;
esac
