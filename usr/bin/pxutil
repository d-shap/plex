#!/bin/bash

PIDFILE=/var/run/plex.pid

vpnList() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/vpnList
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

vpnStartup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/vpnStartup "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

vpnUpdateRoutes() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/vpnUpdateRoutes
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

vpnShutdown() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/vpnShutdown
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

showPreferences() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilShowPreferences
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

showRoutes() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilShowRoutes
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

showTree() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilShowTree
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

setPermit() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilSetPermit upload
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

backup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilBackup "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

restore() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /plex/scripts/utilRestore "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

bash() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" sh -c "cd /plex && /bin/bash"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

case $1 in
    vpnList)
        vpnList
        ;;
    vpnStartup)
        vpnStartup $@
        ;;
    vpnUpdateRoutes)
        vpnUpdateRoutes
        ;;
    vpnShutdown)
        vpnShutdown
        ;;
    showPreferences)
        showPreferences
        ;;
    showRoutes)
        showRoutes
        ;;
    showTree)
        showTree
        ;;
    setPermit)
        setPermit
        ;;
    backup)
        backup $@
        ;;
    restore)
        restore $@
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 <command>"
        echo "Available commands:"
        echo " * vpnList"
        echo " * vpnStartup <configuration>"
        echo " * vpnUpdateRoutes"
        echo " * vpnShutdown"
        echo " * showPreferences"
        echo " * showRoutes"
        echo " * showTree"
        echo " * setPermit"
        echo " * backup <filename>"
        echo " * restore <filename>"
        echo " * bash"
        ;;
esac
